$('#project-<%= @project.id %>').hide().parent().prepend("<%= j render 'form', project: @project %>");

$(document).mouseup(function(e)
{
    let container = $('#edit_project_<%= @project.id %>');
    if (!container.is(e.target) && container.has(e.target).length === 0)
    {
        container.remove();
        $('#project-<%= @project.id %>').show();
    }

});