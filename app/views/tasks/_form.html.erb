<%= simple_form_for @task, remote: true do |f| %>
	<div class='task-input-group'>
	  <%= f.input :title, label: false %>
		  <div class="input-task-btn">
			  <%= f.button :submit, label: false, class: 'btn btn-primary' %>
		  </div>
	</div>
	<div class='task-input-group'>
		<%= f.input :deadline, html5: true, label: false%>
		<div class="input-task-status">
			  <%= f.input :status, label: false%>
		</div>
	</div>
	<div class='task-input-group'>
	  <%= f.input :project_id, label: false, :as => :hidden %>
	  <%= f.select :priority, Task::PRIORITIES, label: false %>
	</div>
<% end %>